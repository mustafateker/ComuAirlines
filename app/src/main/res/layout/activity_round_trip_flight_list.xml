<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flat_font"
    tools:context=".RoundTripFlightList">

    <TextView
        android:id="@+id/odeme_tittle"
        android:layout_width="313dp"
        android:layout_marginTop="10dp"
        android:layout_height="57dp"
        android:layout_gravity="center"
        android:autoLink="web"
        android:background="@drawable/edit_text_background"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/donusBileti"
        android:textColor="#246395"
        android:textSize="45dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="16dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9C9C9C"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/donusucuslogoitemTittle"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:text="Uçuş"
            android:textStyle="bold"
            android:src="@drawable/plane_icon_degrade"

            />
        <LinearLayout
            android:layout_width="1dp"
            android:layout_gravity="center_vertical"
            android:layout_height="50dp"
            android:background="#9C9C9C"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/donusucusnoTittle"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:text="PNR No"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="1dp"
            android:layout_gravity="center_vertical"
            android:layout_height="50dp"
            android:background="#9C9C9C"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/donusucussaatiitemTittle"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Saat"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <LinearLayout
            android:layout_width="1dp"
            android:layout_gravity="center_vertical"
            android:layout_height="50dp"
            android:background="#9C9C9C"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/donusucuskalkisyeriitemTittle"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Kalkış"
            android:textStyle="bold"
            android:textSize="15sp"
            />


        <LinearLayout
            android:layout_width="1dp"
            android:layout_gravity="center_vertical"
            android:layout_height="50dp"
            android:background="#9C9C9C"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:id="@+id/donusucusvarisyeriitemTittle"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Varış"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <LinearLayout
            android:layout_width="1dp"
            android:layout_gravity="center_vertical"
            android:layout_height="50dp"
            android:background="#9C9C9C"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/donusucusfiyatitemTittle"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Fiyat"
            android:textStyle="bold"
            android:textSize="15sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9C9C9C"
        android:orientation="vertical"/>


    <ListView
        android:id="@+id/donusucuslistViewFlights"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnSearch" />


    <!-- Uçuş Listesi ListView -->


</LinearLayout>